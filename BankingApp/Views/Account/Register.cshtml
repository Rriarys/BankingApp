@model BankingApp.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Регистрация</title>
    @* <link rel="stylesheet" href="~/css/styles.css" />  *@
</head>
<body>
    <h1>Регистрация</h1>
    <form asp-action="Register" method="post">
        <div>
            <label asp-for="Email" for="emailInput">mail</label>
            <input asp-for="Email" id="emailInput" name="Email" autocomplete="email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password" for="passwordInput">pass</label>
            <input asp-for="Password" id="passwordInput" name="Password" type="password" autocomplete="new-password" />
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit">Register</button>
    </form>

</body>
</html>
