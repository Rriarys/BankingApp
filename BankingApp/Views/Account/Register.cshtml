@model BankingApp.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Регистрация</title>
    @* <link rel="stylesheet" href="~/css/styles.css" />  *@
    <style>
        body {
            background-color: #add8e6; /* Светло-синий цвет */
        }
    </style>
</head>
<body>
    <h1>Регистрация</h1>
    <form asp-action="Register" method="post">
        <div>
            <label asp-for="Email" for="emailInput">mail</label>
            <input asp-for="Email" id="emailInput" name="Email" autocomplete="email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password" for="passwordInput">pass</label>
            <input asp-for="Password" id="passwordInput" name="Password" type="password" autocomplete="new-password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="FirstName" for="firstNameInput">Имя</label>
            <input asp-for="FirstName" id="firstNameInput" name="FirstName" autocomplete="given-name" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label asp-for="LastName" for="lastNameInput">Фамилия</label>
            <input asp-for="LastName" id="lastNameInput" name="LastName" autocomplete="family-name" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="PassportNumber" for="passportInput">Номер паспорта</label>
            <input asp-for="PassportNumber" id="passportInput" name="PassportNumber" autocomplete="off" />
            <span asp-validation-for="PassportNumber"></span>
        </div>
        <div>
            <label asp-for="TaxpayerId" for="taxpayerInput">Номер карточки налогоплательщика</label>
            <input asp-for="TaxpayerId" id="taxpayerInput" name="TaxpayerId" autocomplete="off" />
            <span asp-validation-for="TaxpayerId"></span>
        </div>
        <div>
            <label asp-for="DateOfBirth" for="dobInput">Дата рождения</label>
            <input asp-for="DateOfBirth" type="date" id="dobInput" name="DateOfBirth" autocomplete="bday" />
            <span asp-validation-for="DateOfBirth"></span>
        </div>
        <button type="submit">Register</button>
    </form>
</body>
</html>
